{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": ["node"],
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["**/*.ts", "**/*.json"],
    "exclude": ["node_modules", "./dist/**/*"]
}
